  <nav class="mobile-nav" role="navigation" aria-label="Mobile Navigation">
    <a href="index.html" class="mobile-nav-item" aria-label="Home">
      <i class="fas fa-home" aria-hidden="true"></i>
      <span data-en="Home" data-es="Inicio">Home</span>
    </a>
    <button class="mobile-nav-item" id="mobile-services-toggle" aria-haspopup="true" aria-expanded="false" aria-controls="mobile-services-menu" aria-label="Toggle Services Menu">
      <i class="fas fa-bars" aria-hidden="true"></i>
      <span data-en="Services" data-es="Servicios">Services</span>
    </button>
    <button class="mobile-nav-item" id="language-toggle-mobile" aria-label="Toggle Language English or Spanish">EN</button>
